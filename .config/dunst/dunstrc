[global]
background = "#44475ADC"
foreground = "#F8F8F2"

transparency = 5

width = (0, 450)
height = (0, 500)

corner_radius = 2

# paddings (padding = vertical padding)
padding = 10
horizontal_padding = 20
markup = full

# The format of the message.  Possible variables are:
#   %a  appname
#   %s  summary
#   %b  body
#   %i  iconname (including its path)
#   %I  iconname (without its path)
#   %p  progress value if set ([  0%] to [100%]) or nothing
# Markup is allowed
format = <span size="large"><b>%s</b></span>\n%b

# sort message by urgency
sort = no

separator_color = "#3B3E50"
separator_height = 2

frame_color = "#282A36"
frame_width = 2

origin = top-right
font = "FiraCode Nerd Font 12"

# Alignment of message text.
# Possible values are "left", "center" and "right".
alignment = center

# The frequency with which text that is longer than the notification
# window allows bounces back and forth.
# This option conflicts with "word_wrap".
# Set to 0 to disable.
bounce_freq = 0


# Split notifications into multiple lines if they don't fit into
# geometry.
word_wrap = yes


[play_notification_audio]
summary="*"
script="/home/cxredix/bin/play_notification_audio"
